@model DTOLayer.DTOs.ContactDTOs.SendMessageDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}
<head>
	<title>Traversal | Seyehat Et, Bul, Keşfet... </title>
</head>

<section class="w3l-about-breadcrumb text-left">
	<div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
		<div class="container py-2">
			<h2 class="title">İletişim</h2>
			<ul class="breadcrumbs-custom-path mt-2">
				<li><a href="/Default/Index/">Ana Sayfa</a></li>
				<li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
			</ul>
		</div>
	</div>
</section>
<section class="w3l-contact" id="contact">
	<div class="contact-infubd py-5">
		<div class="container py-lg-3">
			<div class="contact-grids row">
				<div class="col-lg-6 contact-left">
					<div class="partners">
						<div class="cont-details">
							<h6 class="sub-title" style="text-align:center">Bize Ulaşın</h6>

							<h5>İletişim Bilgilerimiz</h5>
							<p class="mt-3 mb-4">
								Merhaba sevgili gezgin,<br />Dünyanın neresinde olursan ol, bize 7 gün 24 saat, WhatsApp, Telegram, E-Posta, SMS gibi iletişim ağlarımız üzerinden ulaşabilirsin.
							</p>
						</div>
						<div class="hours">
							<h6 class="mt-4">E-Posta Adresimiz:</h6>
							<p>
								<a href="mailto:traveler.seyehat@gmail.com">
									traveler.seyehat@gmail.com
								</a>
							</p>
							<h6 class="mt-4">Ofisimize Gelin:</h6>
							<p> Cumhuriyet Caddesi, 19 Mayıs Sokak No:23 İzmit/Kocaeli.</p>
							<h6 class="mt-4">Telefon:</h6>
							<p class="margin-top"><a href="tel:+90(262)-541-4141">+90(262)-541-4141</a></p>
						</div>
					</div>
				</div>
				<div class="col-lg-6 mt-lg-0 mt-5 contact-right">
					<form method="post" class="signin-form">
						<h6 class="sub-title" style="text-align:center">Biz Size Ulaşalım</h6>

						<div class="input-grids">
							<div class="form-group">
								<input type="text" placeholder="İsminiz*" asp-for="Name" class="contact-input" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-group">
								<input type="email" placeholder="E-Posta Adresiniz*" asp-for="Mail" class="contact-input" required="" />
								<span asp-validation-for="Mail" class="text-danger"></span>
							</div>
							<div class="form-group">
								<input type="text" placeholder="Konu*" asp-for="Subject" class="contact-input" />
								<span asp-validation-for="Subject" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group">
							<textarea asp-for="MessageBody" placeholder="Mesajınız*" required=""></textarea>
							<span asp-validation-for="MessageBody" class="text-danger"></span>
						</div>
						<div class="text-right">
							<button class="btn btn-style btn-primary">Mesajı Gönder</button>
						</div>
					</form>
				</div>
			</div>
			<div class="map mt-5 pt-md-5">
				<h5>Harita</h5>
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48345.38730589697!2d29.934501049999994!3d40.771114!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cb4f66644bfb9d%3A0x82690ee7586b7eb9!2zxLB6bWl0LCBLb2NhZWxp!5e0!3m2!1str!2str!4v1689690799084!5m2!1str!2str" style="border:0" allowfullscreen=""></iframe>
			</div>
		</div>
	</div>
</section>